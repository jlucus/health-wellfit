@using WellFitPlus.Database.Entities
@model IEnumerable<UserProfile>
@{
    ViewBag.Title = "Manage Users";
}

<h3 class="page-header">@ViewBag.Title</h3>

<div style="margin-bottom: 10px;">
    <a href="@Url.Action("Edit")" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus-sign"></i>
        <span>Add User</span>
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Company</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model) {
            <tr>
                <td>
                    @Html.ActionLink(user.Email, "Edit", new { id = user.Id })
                </td>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    @(user.CompanyId != null ? user.Company.Name : "None")
                </td>
            </tr>
        }
    </tbody>
</table>