<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-custom">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Well Fit Plus", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-links">
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["UserRole"] == null) {
                        <li>@Html.ActionLink("Sign In", "Login", "Account")</li>
                    } else {
                        <li id="videoLink">@Html.ActionLink("Videos", "MainPage", "Video")</li>
                        <li id="messageLink">@Html.ActionLink("Messages", "MessageMainPage", "Message")</li>
                        <li id="statisticsLink">@Html.ActionLink("Statistics", "Index", "Statistics")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Companies", "Index", "Company")</li>
                                <li>@Html.ActionLink("Users", "Index", "User")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Sign Out", "Logout", "Account")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid" style="padding: 15px;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/vendor")
    @Scripts.Render("~/Scripts/common.js")

    <script type="text/javascript">
        $.fn.select2.defaults.set("theme", "bootstrap");
        $.fn.select2.defaults.set("width", null);
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
